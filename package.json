{
  "name": "Hackathon",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "tsx scripts/test-runner.ts",
    "test:hardhat": "hardhat test",
    "test:node": "tsx --test test/contracts/**/*.test.ts",
    "test:integration": "hardhat run test/RunAllIntegrationTests.ts",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:deployment-validation": "hardhat run test/DeploymentValidation.test.ts",
    "test:vrfv2plus": "hardhat run test/CrapsGameV2Plus.integration.test.ts",
    "test:uniswapv4": "hardhat run test/BotSwapFeeHookV4Final.integration.test.ts",
    "test:fullsystem": "hardhat run test/FullSystem.integration.test.ts",
    "test:cross-chain": "hardhat run scripts/test-cross-chain-complete.ts",
    "test:cross-chain-vault": "hardhat run test/integration/CrossChainVault.integration.test.ts",
    "test:layerzero-messaging": "hardhat run test/integration/LayerZeroMessaging.test.ts",
    "test:multi-chain-sync": "hardhat run test/integration/MultiChainSync.test.ts",
    "test:integration-suite": "hardhat run test/integration/run-integration-tests.ts",
    "test:integration-forked": "hardhat run test/integration/run-integration-tests.ts -- --forked",
    "test:ethglobal": "npm run test:comprehensive && npm run test:deployment-validation && npm run test:integration-suite",
    "test:performance": "hardhat run test/performance/RunPerformanceTests.ts",
    "test:gas-benchmark": "hardhat run test/performance/GasBenchmark.test.ts",
    "test:load-test": "hardhat run test/performance/LoadTest.test.ts",
    "test:bot-scalability": "hardhat run test/performance/BotScalability.test.ts",
    "test:performance-report": "hardhat run test/performance/PerformanceReport.ts",
    "test:production-ready": "node -e \"import('./test/performance/RunPerformanceTests.ts').then(m => m.checkProductionReadiness())\"",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "deploy:local": "hardhat run scripts/deploy-local.ts",
    "deploy:base-sepolia": "hardhat run scripts/deploy-base-sepolia.ts --network baseSepolia",
    "deploy:arbitrum-sepolia": "hardhat run scripts/deploy-arbitrum-sepolia.ts --network arbitrumSepolia",
    "deploy:all-chains": "npm run deploy:base-sepolia && npm run deploy:arbitrum-sepolia",
    "deploy:uniswap-hook": "hardhat run scripts/deploy-uniswap-v4-hook.ts --network baseSepolia",
    "deploy:v4-hook-compliant": "hardhat run scripts/deploy-v4-hook-compliant.ts --network baseSepolia",
    "test:v4-hook-compliant": "hardhat run test/BotSwapFeeHookV4Compliant.test.ts",
    "deploy:stablecoin-pools": "hardhat run scripts/deploy-stablecoin-pools.ts --network baseSepolia",
    "deploy:ens": "hardhat run scripts/deploy-ens-integration.ts",
    "deploy:cctp": "hardhat run scripts/deploy-cctp-integration.ts",
    "deploy:paymaster": "hardhat run scripts/deploy-paymaster.ts",
    "deploy:gateway": "hardhat run scripts/deploy-gateway.ts",
    "deploy:layerzero": "hardhat run scripts/deploy-omni-coordinator.ts",
    "node": "hardhat node",
    "cli": "node frontend/cli/unified-casino-cli.js",
    "cli:test": "node frontend/cli/unified-casino-cli.js --test --gas-report",
    "cli:test-local": "node frontend/cli/unified-casino-cli.js --network local --test --gas-report",
    "cli:test-sepolia": "node frontend/cli/unified-casino-cli.js --network baseSepolia --test --gas-report",
    "cli:non-interactive": "node frontend/cli/unified-casino-cli.js --non-interactive",
    "cli:quiet": "node frontend/cli/unified-casino-cli.js --quiet --test",
    "cli:help": "node frontend/cli/unified-casino-cli.js --help",
    "cli:batch": "node frontend/cli/unified-casino-cli.js --network local --batch-file frontend/cli/sample-batch-commands.txt --gas-report",
    "cli:bet": "node frontend/cli/unified-casino-cli.js --network local --non-interactive --command bet --gas-report",
    "cli:vault": "node frontend/cli/unified-casino-cli.js --network local --non-interactive --command vault-deposit --amount 100 --gas-report",
    "cli:bot-demo": "node frontend/cli/unified-casino-cli.js --network local --non-interactive --command bot-play --bot-id 0 --rounds 3 --gas-report",
    "launch": "./scripts/launch-enhanced-cli.sh",
    "bots": "node scripts/bot-orchestrator.js",
    "play": "npm run deploy:local && npm run cli:enhanced",
    "play:full": "npm run deploy:local && npm run launch",
    "setup:ollama": "./scripts/setup-ollama.sh",
    "deploy:escrow": "hardhat run scripts/deploy-escrow.js",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:start": "cd web && npm run start",
    "web:install": "cd web && npm install",
    "dev:full": "concurrently \"npm run node\" \"npm run web:dev\" \"npm run bots\"",
    "start:casino": "./scripts/start-casino.sh",
    "setup:web": "node scripts/deploy-and-update-web.js",
    "fund-accounts": "hardhat run scripts/fund-accounts.ts",
    "check-balances": "hardhat run scripts/check-balances.ts",
    "emergency-fund-fix": "hardhat run scripts/emergency-fund-fix.ts",
    "test:emergency-funding": "hardhat run scripts/test-emergency-funding.ts",
    "diagnose": "hardhat run scripts/diagnose-system.ts",
    "fund:bots": "npm run fund-accounts fund-bots",
    "fund:emergency": "npm run fund-accounts emergency",
    "fund:crisis": "npm run emergency-fund-fix",
    "fix:crisis": "npm run test:emergency-funding",
    "balance:check": "npm run check-balances check",
    "balance:monitor": "npm run check-balances monitor",
    "balance:urgent": "npm run check-balances urgent",
    "demo": "bash scripts/demo-for-video.sh",
    "demo:record": "asciinema rec -t 'Barely Human Casino - ETHGlobal NYC 2025' demo.cast && npm run demo",
    "prizes:check": "hardhat run scripts/check-prize-qualifications.ts",
    "benchmark": "npm run test:performance",
    "optimize": "npm run test:gas-benchmark && echo 'Review gas optimization recommendations'",
    "validate:production": "npm run test:production-ready"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.0",
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@types/chai": "^5.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.17.2",
    "axios": "^1.11.0",
    "chai": "^5.2.1",
    "chalk": "^5.5.0",
    "cli-table3": "^0.6.5",
    "concurrently": "^8.2.2",
    "ethers": "^6.15.0",
    "figlet": "^1.8.2",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.0",
    "inquirer": "^12.9.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "solc": "^0.8.30",
    "tsx": "^4.20.4",
    "typescript": "~5.8.0",
    "viem": "^2.33.3",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.44",
    "@layerzerolabs/lz-evm-protocol-v2": "^3.0.125",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.0",
    "@nomicfoundation/hardhat-keystore": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.0",
    "@uniswap/v4-core": "^1.0.0",
    "@uniswap/v4-periphery": "^1.0.0",
    "@uniswap/v4-sdk": "^1.21.4",
    "dotenv": "^17.2.1"
  }
}
