# Barely Human - Production Environment Variables
# Copy this file to .env.production and fill in the values

# Node Environment
NODE_ENV=production

# Domain Configuration
DOMAIN=barelyhuman.xyz
API_DOMAIN=api.barelyhuman.xyz
FRONTEND_URL=https://barelyhuman.xyz
API_URL=https://api.barelyhuman.xyz

# Blockchain Configuration
CHAIN_ID=8453
RPC_URL=https://mainnet.base.org
TESTNET_RPC_URL=https://sepolia.base.org

# Contract Addresses (fill after deployment)
BOT_TOKEN_ADDRESS=
CRAPS_GAME_ADDRESS=
VAULT_FACTORY_ADDRESS=
BOT_MANAGER_ADDRESS=
TREASURY_ADDRESS=
STAKING_POOL_ADDRESS=
GACHA_MINT_PASS_ADDRESS=
BARELY_HUMAN_ART_ADDRESS=
ART_REDEMPTION_SERVICE_ADDRESS=

# Chainlink VRF Configuration
VRF_COORDINATOR_ADDRESS=0x8103B0A8A00be2DDC778e6e7eaa21791Cd364625
VRF_KEY_HASH=0x787d74caea10b2b357790d5b5247c2f63d1d91572a9846f780606e4d953677ae
VRF_SUBSCRIPTION_ID=
VRF_CALLBACK_GAS_LIMIT=200000

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/barely_human
REDIS_URL=redis://redis:6379

# Security Configuration
JWT_SECRET=
ENCRYPTION_KEY=
CORS_ORIGIN=https://barelyhuman.xyz,https://api.barelyhuman.xyz

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
LOKI_URL=http://loki:3100

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@barelyhuman.xyz

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=/app/uploads

# Feature Flags
ENABLE_NFT_GENERATION=true
ENABLE_BOT_BETTING=true
ENABLE_STAKING=true
ENABLE_ANALYTICS=true

# External Services
OPENSEA_API_KEY=
COINGECKO_API_KEY=
ALCHEMY_API_KEY=

# Performance Settings
WEB_WORKER_PROCESSES=auto
API_WORKER_PROCESSES=2
MAX_CONNECTIONS=1000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_S3_BUCKET=

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/certs
SSL_DHPARAM_PATH=/etc/ssl/certs/dhparam.pem

# Development Overrides (only for staging)
# DEBUG=false
# MOCK_VRF=false
# MOCK_PAYMENTS=false